<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent" android:layout_height="wrap_content"
                                   android:layout_margin="4dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:id="@+id/parent_layout"
            android:background="#BACC8B">

        <TextView
                android:text="Topic"
                android:layout_width="129dp"
                android:layout_height="wrap_content" android:id="@+id/textView_topic"
                android:layout_alignParentStart="true" android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentTop="true"
                android:textSize="18sp"/>
        <TextView
                android:text="Hour"
                android:layout_width="121dp"
                android:layout_height="36dp" android:id="@+id/textView_hour"
                android:layout_alignParentStart="true" android:layout_marginStart="10dp" android:textSize="24sp"
                android:layout_marginTop="6dp" android:layout_below="@+id/textView_topic"/>
        <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView_date"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp" android:layout_alignParentTop="true"
                android:textSize="24sp" android:layout_toEndOf="@+id/textView_topic"
                android:layout_marginStart="36dp"/>
        <TextView
                android:text="Text"
                android:layout_width="373dp"
                android:layout_height="wrap_content" android:id="@+id/textView_text" android:layout_marginTop="47dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true" android:layout_marginStart="12dp"
                android:layout_below="@+id/textView_topic"
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>